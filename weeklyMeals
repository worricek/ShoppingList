#fishFile.close()
#print(fishFileContents)

#lastWeek=open('lastWeekMeals.txt', 'r')
#lastWeekContents=lastWeek.readlines()
#lastWeek.close()

#lastWeek=open('lastWeekMeals.txt', 'w')
#lastWeek.write(fishFileContents[fishRandom])

lastMeals=open('lastMeals.txt', 'w')
index=0
while True:
    while True:
        mealRandom=random.randint(0, len(mealContents)-1)
        if mealContents[mealRandom] in weeklyMenu:
            continue
        weeklyMenu.append(mealContents[mealRandom])
        index+=1
#        lastMeals.write(mealContents[mealRandom])
        if index==7:
            print(weeklyMenu)
            break
#    lastMeals.close()
#    lastMeals=open('lastMeals.txt', 'r')
#    print(lastMeals.read())
#    lastMeals.close()
    if input('Change em up? (y/n):') == 'y':
        mealRandom=input('Which meal would you like to change fancy pants? :')
        del weeklyMenu[int(mealRandom)]
        index-=1
        continue
    else:
        break    
lastMeals.write(str(weeklyMenu))
lastMeals.close()
lastMeals=open('lastMeals.txt', 'r')
print(lastMeals.read())
lastMeals.close()
